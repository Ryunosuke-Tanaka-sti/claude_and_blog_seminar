{
  "name": "@workspace/marp",
  "version": "1.0.0",
  "description": "Marp presentation slides",
  "private": true,
  "scripts": {
    "build": "npm run build:all && npm run copy:assets",
    "build:all": "npm run build:claude && npm run build:notion && npm run build:blog-reason && npm run build:voice && npm run build:others",
    "build:claude": "marp src/claude_seminar_slides.md --html --theme ./theme/github-dark.css --output dist/claude_seminar_slides.html --no-stdin",
    "build:notion": "marp src/notion_and_claude_blog_write.md --html --theme ./theme/canyon-custom.css --output dist/notion_and_claude_blog_write.html --no-stdin",
    "build:blog-reason": "marp src/blog_reason_lt_slides.md --html --theme ./theme/github-dark.css --output dist/blog_reason_lt_slides.html --no-stdin",
    "build:voice": "marp src/voice_writing_seminar.md --html --theme ./theme/github-dark.css --output dist/voice_writing_seminar.html --allow-local-files --no-stdin",
    "build:blog-marp": "marp src/blog_to_marp_workflow.md --html --theme ./theme/github-dark.css --output dist/blog_to_marp_workflow.html --allow-local-files --no-stdin",
    "build:ai-env": "marp src/ai_development_environment_setup.md --html --theme ./theme/github-dark.css --output dist/ai_development_environment_setup.html --allow-local-files --no-stdin",
    "build:others": "npm run build:blog-marp && npm run build:ai-env",
    "copy:assets": "mkdir -p dist/assets && cp -r src/assets/* dist/assets/"
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^4.0.0"
  }
}
